@model BugTracker.ViewModel.CreateBugViewModel
@{
    ViewData["Title"] = "Issues";
}
<div class="container-fluid" style="padding-left:0px">
    <div class="row flex-nowrap">
        <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0" style="background-color: #6B6FE5; margin-top: -16px;">
            <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100" style="background-color: #6B6FE5;">
                <ul class="nav nav-pills flex-column mb-sm-auto mb-0 align-items-center align-items-sm-start" id="menu">
                   <div class="pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none" aria-expanded="false">
                            <img src="https://github.com/JorisDeRidder42.png" alt="Profilepic" width="30" height="30" class="rounded-circle">
                            <span class="d-none d-sm-inline mx-1">Loser</span>
                        </a>
                   </div>
                    <li class="nav-item">
                        <a class="nav-link px-0 align-middle text-white" asp-controller="Home" asp-action="Index">
                            <i class="fas fa-home"></i> <span class="ms-1 d-none d-sm-inline">Home</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link px-0 align-middle text-white" asp-controller="Dashboard" asp-action="Index">
                            <i class="fas fa-bug"></i> <span class="ms-1 d-none d-sm-inline">Bugs</span>
                        </a>
                    </li>
                    <li>
                        <a class="nav-link px-0 align-middle text-white" asp-controller="Gebruiker" asp-action="Index">
                            <i class="fas fa-user"></i> <span class="ms-1 d-none d-sm-inline">Users</span>
                        </a>
                    </li>
                </ul>
                <hr />
            </div>
        </div>
           <div class="col py-3">
           <div class="container">
               <div class="col py-3">
            <div class="container">
                <div class="row mt-3">
                    <div class="col-md-12">
                        <h1>Issues</h1>
                    </div>
                </div>
                <div class="row mt-3">
                       <form aps-action="Create">
                          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                          <div class="form-group">
                            <label asp-for="BugTitle">Title*</label>
                            <input asp-for="BugTitle" class="form-control"/>
                            <span asp-validation-for="BugTitle" class="text-danger"></span>
                          </div>
                          <div class="form-group">
                            <label asp-for="BugDescription">Description</label>
                            <textarea asp-for="BugDescription" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="BugTitle" class="text-danger"></span>
                          </div>
                          <div class="form-group">
                            <label for="exampleFormControlSelect1">Priority*</label>
                            <select class="form-control">
                              <option>trivial</option>
                              <option>minor</option>
                              <option>low</option>
                              <option>medium</option>
                              <option>high</option>
                              <option>critical</option>
                              <option>blocked</option>
                            </select>
                          </div>
                          <div class="form-group">
                            <input type="submit" class="btn btn-primary" value="Create Issue"/>
                            <a asp-action="Index" class="btn btn-light">Cancel</a>
                         </div>
                        </form>
                    </div>
                </div>
             <div>
           <div>
       </div>
    </div>
</div>
</div>
</div>
</div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}