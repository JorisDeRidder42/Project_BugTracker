@model BugTracker.ViewModel.GebruikerListViewModel
@{
    ViewData["Title"] = "Index";
}
<h2>Gebruikers</h2>

<table>
    <thead>
        <tr> 
            <th class="col-md-2">
                @Html.DisplayNameFor(v => v.ApplicationUsers[0].Email)
            </th>
            <th class="col-md-2">
                @Html.DisplayNameFor(v => v.ApplicationUsers[0].Password)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model.ApplicationUsers)
        {
            <tr>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => application.Email)
                </td>
                <td class="col-md-2">
                    @Html.DisplayFor(modelItem => application.Password)
                </td>
                <td class="col-md-2">
                   @* <a asp-action="Edit" asp-route-id="@application.ApplicationID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@application.ApplicationID">Delete</a>*@
                </td>
            </tr>
        }
    </tbody>
</table>


